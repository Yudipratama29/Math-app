<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/MathApp_logo"
        android:layout_width="241dp"
        android:layout_height="80dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mathapp_logo" />

    <ImageButton
        android:id="@+id/BtnOperasi"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="BtnOperasi"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/operasi_bilangan" />

    <ImageButton
        android:id="@+id/BtnPangkat"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="BtnPangkat"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pangkat_bilangan" />

    <ImageButton
        android:id="@+id/BtnAbout"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="BtnAbout"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about" />

</androidx.constraintlayout.widget.ConstraintLayout>
